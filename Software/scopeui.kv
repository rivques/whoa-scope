<SettingsDialog>:
    fontsize_slider: fontsize_slider
    font_spinner: font_spinner
    maximized_checkbox: maximized_checkbox
    connection_label: connection_label
    ports_label: ports_label
    auto_dismiss: False
    title: 'Settings'
    size_hint: (0.85, 0.85)
    
    on_open:
        connection_label.text = app.get_connection_status_text()
        ports_label.text = app.get_serial_ports_text()
        font_spinner.values = app.get_available_fonts()
        font_spinner.text = app.fontname

    BoxLayout:
        orientation: 'vertical'
        padding: [10, 10, 20, 20]
        spacing: 15

        # Version Info Section
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 40
            
            Label:
                text: '[b]About[/b] ' + ('Whoa-Scope v' + app.title.split('v')[-1] if 'v' in app.title else 'Whoa-Scope')
                font_size: int(18 * app.fontscale)
                markup: True
                halign: 'left'
                text_size: self.size
                size_hint_y: None
                height: 25
            
            Label:
                text: "Based on O-Scope by @bminch, changes by @rivques and @happysmaran"
                font_size: int(16 * app.fontscale)
                halign: 'left'
                text_size: self.size
                size_hint_y: None
                height: 25

        # Separator
        Widget:
            size_hint_y: None
            height: 1
            canvas:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        
        # Window Settings Section
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 70
            
            Label:
                text: '[b]Window Settings[/b]'
                font_size: int(18 * app.fontscale)
                markup: True
                halign: 'left'
                text_size: self.size
                size_hint_y: None
                height: 30
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 40
                spacing: 10
                
                CheckBox:
                    id: maximized_checkbox
                    size_hint_x: None
                    active: app.launch_maximized
                    on_active: app.update_launch_maximized(self.active)
                
                Label:
                    text: 'Launch maximized on startup'
                    font_size: int(16 * app.fontscale)
                    halign: 'left'
                    text_size: self.size
                    valign: 'middle'

        # Font Settings Section
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 130
            
            Label:
                text: '[b]Display Settings[/b]'
                font_size: int(18 * app.fontscale)
                markup: True
                halign: 'left'
                text_size: self.size
                size_hint_y: None
                height: 30
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 40
                spacing: 10
                
                Label:
                    text: 'Font:'
                    font_size: int(16 * app.fontscale)
                    size_hint_x: 0.2
                    halign: 'right'
                    text_size: self.size
                    valign: 'middle'
                
                Spinner:
                    id: font_spinner
                    text: app.fontname
                    values: app.get_available_fonts()
                    size_hint_x: 0.5
                    font_size: int(16 * app.fontscale)
                    on_text: app.update_fontname(self.text)
                
                Label:
                    text: '(requires restart)'
                    font_size: int(14 * app.fontscale)
                    size_hint_x: 0.3
                    color: 0.6, 0.6, 0.6, 1
                    halign: 'left'
                    text_size: self.size
                    valign: 'middle'
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 40
                spacing: 10
                
                Label:
                    text: 'Text Scale:'
                    font_size: int(16 * app.fontscale)
                    size_hint_x: 0.2
                    halign: 'right'
                    text_size: self.size
                    valign: 'middle'
                
                Slider:
                    id: fontsize_slider
                    min: 0.5
                    max: 1.5
                    value: app.fontscale
                    step: 0.05
                    size_hint_x: 0.5
                    on_value: app.update_fontscale(self.value)
                
                Label:
                    text: str(int(fontsize_slider.value * 100)) + '% (requires restart)'
                    font_size: int(14 * app.fontscale)
                    size_hint_x: 0.3
                    color: 0.6, 0.6, 0.6, 1
                    halign: 'left'
                    text_size: self.size
                    valign: 'middle'
            
            # tooltip delay setting
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 40
                spacing: 10
                
                Label:
                    text: 'Tooltip Delay:'
                    font_size: int(16 * app.fontscale)
                    size_hint_x: 0.2
                    halign: 'right'
                    text_size: self.size
                    valign: 'middle'
                
                Slider:
                    id: tooltip_delay_slider
                    min: 0.0
                    max: 2.0
                    value: app.tooltip_delay
                    step: 0.1
                    size_hint_x: 0.5
                    on_value: app.update_tooltip_delay(self.value)
                
                Label:
                    text: str(round(tooltip_delay_slider.value, 1)) + ' seconds'
                    font_size: int(14 * app.fontscale)
                    size_hint_x: 0.3
                    color: 0.6, 0.6, 0.6, 1
                    halign: 'left'
                    text_size: self.size
                    valign: 'middle'

        

        # Color Theme Section
        BoxLayout:
            id: color_theme_section
            orientation: 'vertical'
            size_hint_y: None
            height: 80 if theme_spinner.text != 'custom' else 200
            
            Label:
                text: '[b]Color Theme[/b]'
                font_size: int(18 * app.fontscale)
                markup: True
                halign: 'left'
                text_size: self.size
                size_hint_y: None
                height: 30
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 40
                spacing: 10
                
                Label:
                    text: 'Theme:'
                    font_size: int(16 * app.fontscale)
                    size_hint_x: 0.15
                    halign: 'right'
                    text_size: self.size
                    valign: 'middle'
                
                Spinner:
                    id: theme_spinner
                    text: app.color_theme
                    values: app.get_available_themes()
                    size_hint_x: 0.85
                    font_size: int(16 * app.fontscale)
                    on_text: app.update_color_theme(self.text)
                    text_autoupdate: True
                    option_cls: Factory.ThemeSpinnerOption
            
            # Custom Theme Editor (only visible when custom theme is selected)
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 120 if theme_spinner.text == 'custom' else 0
                opacity: 1 if theme_spinner.text == 'custom' else 0
                disabled: theme_spinner.text != 'custom'
                spacing: 3
                padding: [5, 5, 5, 5]
                
                Label:
                    text: 'Custom Theme Colors:'
                    font_size: int(14 * app.fontscale)
                    halign: 'left'
                    text_size: self.size
                    size_hint_y: None
                    height: 20
                
                GridLayout:
                    cols: 8
                    spacing: 5
                    row_default_height: 28
                    size_hint_y: None
                    height: 60
                    
                    # Row 1: CH1, CH2, Background, Axes BG
                    Label:
                        text: 'CH1:'
                        font_size: int(12 * app.fontscale)
                        halign: 'right'
                        text_size: self.size
                        valign: 'middle'
                    ColorPickerButton:
                        id: custom_ch1_btn
                        size_hint: None, None
                        size: 30, 24
                        color_key: 'ch1_color'
                        color_value: app.get_custom_theme_color('ch1_color')
                    
                    Label:
                        text: 'CH2:'
                        font_size: int(12 * app.fontscale)
                        halign: 'right'
                        text_size: self.size
                        valign: 'middle'
                    ColorPickerButton:
                        id: custom_ch2_btn
                        size_hint: None, None
                        size: 30, 24
                        color_key: 'ch2_color'
                        color_value: app.get_custom_theme_color('ch2_color')
                    
                    Label:
                        text: 'BG:'
                        font_size: int(12 * app.fontscale)
                        halign: 'right'
                        text_size: self.size
                        valign: 'middle'
                    ColorPickerButton:
                        id: custom_bg_btn
                        size_hint: None, None
                        size: 30, 24
                        color_key: 'plot_background'
                        color_value: app.get_custom_theme_color('plot_background')
                    
                    Label:
                        text: 'Axes BG:'
                        font_size: int(12 * app.fontscale)
                        halign: 'right'
                        text_size: self.size
                        valign: 'middle'
                    ColorPickerButton:
                        id: custom_axes_bg_btn
                        size_hint: None, None
                        size: 30, 24
                        color_key: 'axes_background'
                        color_value: app.get_custom_theme_color('axes_background')
                    
                    # Row 2: Axes, Grid, Gain, Phase
                    Label:
                        text: 'Axes:'
                        font_size: int(12 * app.fontscale)
                        halign: 'right'
                        text_size: self.size
                        valign: 'middle'
                    ColorPickerButton:
                        id: custom_axes_btn
                        size_hint: None, None
                        size: 30, 24
                        color_key: 'axes_color'
                        color_value: app.get_custom_theme_color('axes_color')
                    
                    Label:
                        text: 'Grid:'
                        font_size: int(12 * app.fontscale)
                        halign: 'right'
                        text_size: self.size
                        valign: 'middle'
                    ColorPickerButton:
                        id: custom_grid_btn
                        size_hint: None, None
                        size: 30, 24
                        color_key: 'grid_color'
                        color_value: app.get_custom_theme_color('grid_color')
                    
                    Label:
                        text: 'Gain:'
                        font_size: int(12 * app.fontscale)
                        halign: 'right'
                        text_size: self.size
                        valign: 'middle'
                    ColorPickerButton:
                        id: custom_gain_btn
                        size_hint: None, None
                        size: 30, 24
                        color_key: 'gain_color'
                        color_value: app.get_custom_theme_color('gain_color')
                    
                    Label:
                        text: 'Phase:'
                        font_size: int(12 * app.fontscale)
                        halign: 'right'
                        text_size: self.size
                        valign: 'middle'
                    ColorPickerButton:
                        id: custom_phase_btn
                        size_hint: None, None
                        size: 30, 24
                        color_key: 'phase_color'
                        color_value: app.get_custom_theme_color('phase_color')
                
                Button:
                    text: 'Reset to Defaults'
                    font_size: int(12 * app.fontscale)
                    size_hint: None, None
                    size: 120, 28
                    pos_hint: {'center_x': 0.5}
                    on_release: app.reset_custom_theme_and_refresh(root)

        # Separator
        Widget:
            size_hint_y: None
            height: 1
            canvas:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        # Connection Status Section
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 1
            
            Label:
                text: '[b]Serial Connection[/b]'
                font_size: int(18 * app.fontscale)
                markup: True
                halign: 'left'
                text_size: self.size
                size_hint_y: None
                height: 30
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 30
                
                Label:
                    text: 'Status: '
                    font_size: int(16 * app.fontscale)
                    size_hint_x: 0.15
                    halign: 'right'
                    text_size: self.size
                    valign: 'middle'
                
                Label:
                    id: connection_label
                    text: '[color=#888888]Loading...[/color]'
                    font_size: int(16 * app.fontscale)
                    markup: True
                    halign: 'left'
                    text_size: self.size
                    valign: 'middle'
            
            Label:
                text: 'Available Ports:'
                font_size: int(16 * app.fontscale)
                halign: 'left'
                text_size: self.size
                size_hint_y: None
                height: 25
            
            ScrollView:
                size_hint_y: 1
                do_scroll_x: False
                
                Label:
                    id: ports_label
                    text: 'Scanning...'
                    font_size: int(15 * app.fontscale)
                    markup: True
                    halign: 'left'
                    valign: 'top'
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding: [10, 5]

        # Settings Path Info
        Label:
            text: 'Settings stored in: ' + app.get_settings_directory()
            font_size: int(14 * app.fontscale)
            color: 0.5, 0.5, 0.5, 1
            size_hint_y: None
            height: 20
            halign: 'left'
            text_size: self.size

        # Close Button
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            padding: [0, 10, 0, 0]
            
            Widget:
                size_hint_x: 0.3
            
            Button:
                text: 'Close'
                font_size: int(18 * app.fontscale)
                size_hint_x: 0.4
                on_release: root.dismiss()
            
            Widget:
                size_hint_x: 0.3

