                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: 0.5

                    ImageButton:
                        id: zoom_in_y_button
                        size_hint_x: 0.25
                        source: kivy_resources.resource_find('zoom_in_y.png')
                        on_release: root.zoom_in_y()
                        tooltip_text: 'Zoom In Vertically'

                    ImageButton:
                        id: zoom_out_y_button
                        size_hint_x: 0.25
                        source: kivy_resources.resource_find('zoom_out_y.png')
